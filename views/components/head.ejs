<head>
  <title><%= settings.name %></title>
  <link rel="icon" type="image/x-icon" href="<%= settings.icon %>" />
  <script src="https://cdn.tailwindcss.com"></script>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <script src="https://unpkg.com/@popperjs/core@2.10.1/dist/umd/popper.min.js"></script>

  <!-- Sans fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

  <!-- Include the top loader -->
  <%- include('./toploader') %>

  <!-- Custom Scrollbar Styling -->
  <style>
    @import url("https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap");

    :root {
      color-scheme: dark;
    }

    @font-face {
      font-family: "Stack Sans Notch";
      src: url("/assets/StackSansNotch-VariableFont_wght.ttf")
        format("truetype");
      font-weight: 100 900;
      font-style: normal;
      font-display: swap;
    }

    body {
      font-family: "Stack Sans Notch", "Inter", sans-serif;
    }

    :root {
      --font-brand: "Stack Sans Notch", "Inter", sans-serif;
      --font-description: "Inter", "Stack Sans Notch", sans-serif;
    }

    p,
    small,
    label {
      font-family: var(--font-description);
    }

    :where(.text-xs, .text-sm, .text-base):not(
        :is(a, button, input, select, textarea)
      ) {
      font-family: var(--font-description);
    }

    :is(a, button, input, select, textarea) {
      font-family: var(--font-brand);
    }

    .font-brand {
      font-family: var(--font-brand);
    }

    /* Modern scrollbar styling */
    ::-webkit-scrollbar {
      width: 8px;
      height: 8px;
    }

    ::-webkit-scrollbar-track {
      background: rgba(15, 23, 32, 0.6);
    }

    ::-webkit-scrollbar-thumb {
      background: #0ea5e9;
      border-radius: 4px;
    }

    ::-webkit-scrollbar-thumb:hover {
      background: #0284c7;
    }

    /* Firefox scrollbar styling */
    * {
      scrollbar-width: thin;
      scrollbar-color: #0ea5e9 rgba(15, 23, 32, 0.6);
    }

    /* For dark mode preference */
    @media (prefers-color-scheme: dark) {
      ::-webkit-scrollbar-track {
        background: rgba(10, 17, 24, 0.8);
      }

      * {
        scrollbar-color: #0ea5e9 rgba(10, 17, 24, 0.8);
      }
    }
  </style>
</head>
