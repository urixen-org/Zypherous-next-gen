<%- include('../components/head') %>

<body class="min-h-screen bg-neutral-950 text-slate-100">
  <div>
    <%- include('../components/adminnav') %>
    <div class="md:pl-64 flex flex-col flex-1 min-h-screen"> 
      <%- include('../components/header') %>
      <main class="flex-1 pb-8">
        <div class="py-4 md:py-6">
          <% /* Skeleton loader, lasts about 0.3s to let the page content load */ %>
          <%- include('../components/skeleton') %>
          <div class="hidden max-w-screen-2xl mx-auto px-4 sm:px-6 md:px-8" id="content">

            
            <div class="bg-neutral-900 rounded-sm md:rounded-sm p-4 md:p-6 mb-4 md:mb-6 border-t border-neutral-800/70 shadow-sm">
              <div class="flex flex-col md:flex-row md:items-center md:justify-between">
                <div class="mb-3 md:mb-0">
                  <h2 class="text-lg md:text-xl font-semibold text-white tracking-tight">Coin Management</h2>
                  <p class="text-xs md:text-sm font-normal text-slate-400 mt-1">Manage user coins and transactions on the <%= settings.name %> dashboard.</p>
                </div>
              </div>
            </div>
            
            <% if (pterodactyl.root_admin == true) { %>
            <div class="grid grid-cols-1 gap-6 lg:grid-cols-2">
              <div class="relative flex flex-col space-y-3 rounded-sm md:rounded-sm bg-neutral-900/60 shadow-sm border-t border-neutral-800/70 px-5 py-4 md:px-6 md:py-5 transition">
                <h1 class="text-lg font-semibold text-white">Add Coins</h1>
                <p class="text-sm text-slate-400">Add coins to a user's account by Discord ID.</p>
                
                <div class="mt-2">
                  <label for="id1" class="block text-sm font-medium text-slate-400 mb-1">Discord ID</label>
                  <input type="text" class="w-full border border-neutral-800/70 bg-neutral-900/60 focus:ring-sky-500 focus:border-transparent transition font-medium pl-4 py-3 text-sm text-slate-400 placeholder:text-slate-500 tracking-tight rounded-sm" id="id1" placeholder="Enter Discord ID">
                </div>
                
                <div class="mt-2">
                  <label for="amount1" class="block text-sm font-medium text-slate-400 mb-1">Amount</label>
                  <input type="text" class="w-full border border-neutral-800/70 bg-neutral-900/60 focus:ring-sky-500 focus:border-transparent transition font-medium pl-4 py-3 text-sm text-slate-400 placeholder:text-slate-500 tracking-tight rounded-sm" id="amount1" placeholder="Enter amount of coins">
                </div>
                
                <a href="javascript:addCoins()" class="inline-flex items-center justify-center rounded-full border-none bg-sky-500 px-6 py-2.5 text-sm font-normal text-white ring-none focus:outline-none hover:bg-sky-400 transition-colors duration-200 mt-2">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 mr-2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v12m6-6H6" />
                  </svg>
                  Add Coins
                </a>
              </div>
              
              <div class="relative flex flex-col space-y-3 rounded-sm md:rounded-sm bg-neutral-900/60 shadow-sm border-t border-neutral-800/70 px-5 py-4 md:px-6 md:py-5 transition">
                <h1 class="text-lg font-semibold text-white">Remove Coins</h1>
                <p class="text-sm text-slate-400">Remove coins from a user's account by Discord ID.</p>
                
                <div class="mt-2">
                  <label for="id2" class="block text-sm font-medium text-slate-400 mb-1">Discord ID</label>
                  <input type="text" class="w-full border border-neutral-800/70 bg-neutral-900/60 focus:ring-sky-500 focus:border-transparent transition font-medium pl-4 py-3 text-sm text-slate-400 placeholder:text-slate-500 tracking-tight rounded-sm" id="id2" placeholder="Enter Discord ID">
                </div>
                
                <div class="mt-2">
                  <label for="amount2" class="block text-sm font-medium text-slate-400 mb-1">Amount</label>
                  <input type="text" class="w-full border border-neutral-800/70 bg-neutral-900/60 focus:ring-sky-500 focus:border-transparent transition font-medium pl-4 py-3 text-sm text-slate-400 placeholder:text-slate-500 tracking-tight rounded-sm" id="amount2" placeholder="Enter amount of coins">
                </div>
                
                <a href="javascript:removeCoins()" class="inline-flex items-center justify-center rounded-full border-none bg-red-600 px-6 py-2.5 text-sm font-normal text-white ring-none focus:outline-none hover:bg-red-700 transition-colors duration-200 mt-2">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 mr-2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M18 12H6" />
                  </svg>
                  Remove Coins
                </a>
              </div>
            </div>
            <% } %>
          </div>
        </div>
      </main>
      <%- include('../components/footer') %>
      <%- include('../components/notifications') %>
    </div>
  </div>
  <script>
    async function addCoins() {
      const id = document.getElementById("id1").value.trim();
      const amount = document.getElementById("amount1").value.trim();
      
      if (!id) {
        showNotification("Please enter a Discord ID", "error");
        return;
      }
      
      if (!amount || isNaN(amount) || parseInt(amount) <= 0) {
        showNotification("Please enter a valid amount", "error");
        return;
      }
      
      document.location.href = `/addcoins?id=${encodeURIComponent(id)}&coins=${encodeURIComponent(amount)}`;
    }
    
    async function removeCoins() {
      const id = document.getElementById("id2").value.trim();
      const amount = document.getElementById("amount2").value.trim();
      
      if (!id) {
        showNotification("Please enter a Discord ID", "error");
        return;
      }
      
      if (!amount || isNaN(amount) || parseInt(amount) <= 0) {
        showNotification("Please enter a valid amount", "error");
        return;
      }
      
      // Create a negative amount for removal
      const negativeAmount = -Math.abs(parseFloat(amount));
      document.location.href = `/addcoins?id=${encodeURIComponent(id)}&coins=${encodeURIComponent(negativeAmount)}`;
    }
  </script>
</body>
