<%- include('../components/head') %>

<body class="min-h-screen bg-neutral-950 text-slate-100">
  <div>
    <%- include('../components/adminnav') %>
    <div class="md:pl-64 flex flex-col flex-1 min-h-screen">
      <%- include('../components/header') %>
      <main class="flex-1 pb-8">
        <div class="py-4 md:py-6">
          <% /* Skeleton loader, lasts about 0.3s to let the page content load */ %>
          <%- include('../components/skeleton') %>
          <div class="hidden max-w-screen-2xl mx-auto px-4 sm:px-6 md:px-8" id="content">
            <div class="bg-neutral-900 rounded-sm md:rounded-sm p-4 md:p-6 mb-6 border-t border-neutral-800/70 shadow-sm">
              <div class="flex flex-col md:flex-row md:items-center md:justify-between">
                <div class="mb-3 md:mb-0">
                  <h2 class="text-lg md:text-xl font-semibold text-white tracking-tight">Create Server</h2>
                  <p class="text-xs md:text-sm font-normal text-slate-400 mt-1">Provision a server for any panel user.</p>
                </div>
                <div class="flex space-x-3">
                  <a href="/admin/server" class="inline-flex items-center justify-center rounded-full border border-neutral-800 bg-white/5 px-4 py-2 text-sm font-medium text-white hover:bg-white/10 transition-colors duration-200">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 mr-2">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M9 15 3 9m0 0 6-6M3 9h12a6 6 0 0 1 0 12h-3" />
                    </svg>
                    Back to Servers
                  </a>
                </div>
              </div>
            </div>

            <% if (req.query.err) { %>
            <div class="rounded-sm md:rounded-sm border border-neutral-800/70 p-4 mb-6 bg-red-500/10">
              <div class="flex">
                <div class="flex-shrink-0">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                  </svg>
                </div>
                <div class="ml-3">
                  <p class="text-sm text-white">Error code: <code class="bg-white/10 px-1.5 py-0.5 rounded-sm"><%= req.query.err %></code></p>
                </div>
              </div>
            </div>
            <% } %>

            <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
              <div class="bg-neutral-900/60 rounded-sm p-5 border-t border-neutral-800/70 shadow-sm">
                <h3 class="text-base font-semibold text-white">Server Details</h3>
                <div class="mt-4 space-y-3">
                  <div>
                    <label class="block text-xs font-medium text-slate-400 mb-2" for="name">Server Name</label>
                    <input id="name" type="text" class="w-full rounded-sm border border-neutral-800/70 bg-neutral-900/60 px-3 py-2 text-sm text-white" placeholder="My Server">
                  </div>
                  <div>
                    <label class="block text-xs font-medium text-slate-400 mb-2" for="egg">Egg</label>
                    <select id="egg" class="w-full rounded-sm border border-neutral-800/70 bg-neutral-900/60 px-3 py-2 text-sm text-white">
                      <option value="">Select an egg</option>
                      <% Object.entries(eggs || {}).forEach(([key, egg]) => { %>
                        <option value="<%= key %>"><%= egg.display || key %></option>
                      <% }) %>
                    </select>
                  </div>
                  <div>
                    <label class="block text-xs font-medium text-slate-400 mb-2" for="location">Location</label>
                    <select id="location" class="w-full rounded-sm border border-neutral-800/70 bg-neutral-900/60 px-3 py-2 text-sm text-white">
                      <option value="">Select a location</option>
                      <% Object.entries(locations || {}).forEach(([key, location]) => { %>
                        <option value="<%= key %>"><%= location.name || key %></option>
                      <% }) %>
                    </select>
                  </div>
                </div>
              </div>

              <div class="bg-neutral-900/60 rounded-sm p-5 border-t border-neutral-800/70 shadow-sm">
                <h3 class="text-base font-semibold text-white">Resources</h3>
                <div class="mt-4 grid grid-cols-1 sm:grid-cols-2 gap-3">
                  <div>
                    <label class="block text-xs font-medium text-slate-400 mb-2" for="ram">Memory (MB)</label>
                    <input id="ram" type="number" min="256" class="w-full rounded-sm border border-neutral-800/70 bg-neutral-900/60 px-3 py-2 text-sm text-white" placeholder="2048">
                  </div>
                  <div>
                    <label class="block text-xs font-medium text-slate-400 mb-2" for="disk">Disk (MB)</label>
                    <input id="disk" type="number" min="1024" class="w-full rounded-sm border border-neutral-800/70 bg-neutral-900/60 px-3 py-2 text-sm text-white" placeholder="10240">
                  </div>
                  <div>
                    <label class="block text-xs font-medium text-slate-400 mb-2" for="cpu">CPU (%)</label>
                    <input id="cpu" type="number" min="50" class="w-full rounded-sm border border-neutral-800/70 bg-neutral-900/60 px-3 py-2 text-sm text-white" placeholder="100">
                  </div>
                </div>
              </div>

              <div class="bg-neutral-900/60 rounded-sm p-5 border-t border-neutral-800/70 shadow-sm lg:col-span-2">
                <h3 class="text-base font-semibold text-white">Assign Owner</h3>
                <p class="text-xs text-slate-400 mt-1">Provide a panel user ID or Discord ID to resolve the owner.</p>
                <div class="mt-4 grid grid-cols-1 sm:grid-cols-2 gap-3">
                  <div>
                    <label class="block text-xs font-medium text-slate-400 mb-2" for="user_id">Panel User ID</label>
                    <input id="user_id" type="text" class="w-full rounded-sm border border-neutral-800/70 bg-neutral-900/60 px-3 py-2 text-sm text-white" placeholder="Pterodactyl user ID">
                  </div>
                  <div>
                    <label class="block text-xs font-medium text-slate-400 mb-2" for="discord_id">Discord ID (optional)</label>
                    <input id="discord_id" type="text" class="w-full rounded-sm border border-neutral-800/70 bg-neutral-900/60 px-3 py-2 text-sm text-white" placeholder="123456789012345678">
                  </div>
                </div>
              </div>
            </div>

            <div class="mt-6 flex justify-end">
              <button type="button" class="inline-flex items-center px-5 py-2.5 rounded-sm bg-sky-500 text-sm font-medium text-white hover:bg-sky-400" onclick="submitCreateServer()">Create Server</button>
            </div>
          </div>
        </div>
      </main>
      <%- include('../components/footer') %>
      <%- include('../components/notifications') %>
    </div>
  </div>

  <script>
    function submitCreateServer() {
      const params = {
        name: document.getElementById("name").value.trim(),
        egg: document.getElementById("egg").value,
        location: document.getElementById("location").value,
        ram: document.getElementById("ram").value.trim(),
        disk: document.getElementById("disk").value.trim(),
        cpu: document.getElementById("cpu").value.trim(),
        user_id: document.getElementById("user_id").value.trim(),
        discord_id: document.getElementById("discord_id").value.trim()
      };

      if (!params.name || !params.egg || !params.location || !params.ram || !params.disk || !params.cpu || (!params.user_id && !params.discord_id)) {
        showNotification("Fill out all required fields.", "error");
        return;
      }

      const search = new URLSearchParams();
      Object.entries(params).forEach(([key, value]) => {
        if (value !== "" && value !== null && typeof value !== "undefined") {
          search.append(key, value);
        }
      });

      window.location.href = `/admin/server/create/submit?${search.toString()}`;
    }
  </script>
</body>
