<%- include('../components/head') %>

<body class="min-h-screen bg-neutral-950 text-slate-100">
  <div>
    <%- include('../components/adminnav') %>
    <div class="md:pl-64 flex flex-col flex-1 min-h-screen">
      <%- include('../components/header') %>
      <main class="flex-1 pb-8">
        <div class="py-4 md:py-6">
          <% /* Skeleton loader, lasts about 0.3s to let the page content load */ %>
          <%- include('../components/skeleton') %>
          <div class="hidden max-w-screen-2xl mx-auto px-4 sm:px-6 md:px-8" id="content">
            <div class="bg-neutral-900 rounded-sm md:rounded-sm p-4 md:p-6 mb-6 border-t border-neutral-800/70 shadow-sm">
              <div class="flex flex-col md:flex-row md:items-center md:justify-between">
                <div class="mb-3 md:mb-0">
                  <h2 class="text-lg md:text-xl font-semibold text-white tracking-tight">Create User</h2>
                  <p class="text-xs md:text-sm font-normal text-slate-400 mt-1">Create a new Pterodactyl user and optionally link local account data.</p>
                </div>
                <div class="flex space-x-3">
                  <a href="/admin/user" class="inline-flex items-center justify-center rounded-full border border-neutral-800 bg-white/5 px-4 py-2 text-sm font-medium text-white hover:bg-white/10 transition-colors duration-200">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 mr-2">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M9 15 3 9m0 0 6-6M3 9h12a6 6 0 0 1 0 12h-3" />
                    </svg>
                    Back to Users
                  </a>
                </div>
              </div>
            </div>

            <% if (req.query.err) { %>
            <div class="rounded-sm md:rounded-sm border border-neutral-800/70 p-4 mb-6 bg-red-500/10">
              <div class="flex">
                <div class="flex-shrink-0">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                  </svg>
                </div>
                <div class="ml-3">
                  <p class="text-sm text-white">Error code: <code class="bg-white/10 px-1.5 py-0.5 rounded-sm"><%= req.query.err %></code></p>
                </div>
              </div>
            </div>
            <% } %>

            <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
              <div class="bg-neutral-900/60 rounded-sm p-5 border-t border-neutral-800/70 shadow-sm">
                <h3 class="text-base font-semibold text-white">Panel Details</h3>
                <p class="text-xs text-slate-400 mt-1">These fields are required by the panel API.</p>
                <div class="mt-4 space-y-3">
                  <div>
                    <label class="block text-xs font-medium text-slate-400 mb-2" for="username">Username</label>
                    <input id="username" type="text" class="w-full rounded-sm border border-neutral-800/70 bg-neutral-900/60 px-3 py-2 text-sm text-white placeholder:text-slate-500 focus:ring-2 focus:ring-sky-500" placeholder="username">
                  </div>
                  <div>
                    <label class="block text-xs font-medium text-slate-400 mb-2" for="email">Email</label>
                    <input id="email" type="email" class="w-full rounded-sm border border-neutral-800/70 bg-neutral-900/60 px-3 py-2 text-sm text-white placeholder:text-slate-500 focus:ring-2 focus:ring-sky-500" placeholder="user@example.com">
                  </div>
                  <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
                    <div>
                      <label class="block text-xs font-medium text-slate-400 mb-2" for="first_name">First Name</label>
                      <input id="first_name" type="text" class="w-full rounded-sm border border-neutral-800/70 bg-neutral-900/60 px-3 py-2 text-sm text-white placeholder:text-slate-500 focus:ring-2 focus:ring-sky-500" placeholder="First">
                    </div>
                    <div>
                      <label class="block text-xs font-medium text-slate-400 mb-2" for="last_name">Last Name</label>
                      <input id="last_name" type="text" class="w-full rounded-sm border border-neutral-800/70 bg-neutral-900/60 px-3 py-2 text-sm text-white placeholder:text-slate-500 focus:ring-2 focus:ring-sky-500" placeholder="Last">
                    </div>
                  </div>
                  <div>
                    <label class="block text-xs font-medium text-slate-400 mb-2" for="password">Password</label>
                    <div class="flex gap-2">
                      <input id="password" type="text" class="flex-1 rounded-sm border border-neutral-800/70 bg-neutral-900/60 px-3 py-2 text-sm text-white placeholder:text-slate-500 focus:ring-2 focus:ring-sky-500" placeholder="Generate or enter">
                      <button type="button" class="px-3 py-2 text-xs font-semibold rounded-sm border border-neutral-800 bg-white/5 text-white hover:bg-white/10" onclick="generatePassword()">Generate</button>
                    </div>
                  </div>
                  <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
                    <div>
                      <label class="block text-xs font-medium text-slate-400 mb-2" for="language">Language</label>
                      <input id="language" type="text" class="w-full rounded-sm border border-neutral-800/70 bg-neutral-900/60 px-3 py-2 text-sm text-white placeholder:text-slate-500 focus:ring-2 focus:ring-sky-500" placeholder="en" value="en">
                    </div>
                    <div class="flex items-center gap-2 mt-6">
                      <input id="root_admin" type="checkbox" class="h-4 w-4 rounded border-neutral-700 bg-neutral-950 text-sky-500">
                      <label for="root_admin" class="text-sm text-slate-300">Root admin</label>
                    </div>
                  </div>
                </div>
              </div>

              <div class="bg-neutral-900/60 rounded-sm p-5 border-t border-neutral-800/70 shadow-sm">
                <h3 class="text-base font-semibold text-white">Local Account (Optional)</h3>
                <p class="text-xs text-slate-400 mt-1">Only used for coins, plans, and resource extras. Requires Discord ID.</p>
                <div class="mt-4 space-y-3">
                  <div>
                    <label class="block text-xs font-medium text-slate-400 mb-2" for="discord_id">Discord ID</label>
                    <input id="discord_id" type="text" class="w-full rounded-sm border border-neutral-800/70 bg-neutral-900/60 px-3 py-2 text-sm text-white placeholder:text-slate-500 focus:ring-2 focus:ring-sky-500" placeholder="123456789012345678">
                  </div>
                  <div>
                    <label class="block text-xs font-medium text-slate-400 mb-2" for="package">Plan</label>
                    <select id="package" class="w-full rounded-sm border border-neutral-800/70 bg-neutral-900/60 px-3 py-2 text-sm text-white focus:ring-2 focus:ring-sky-500">
                      <option value="">Default plan</option>
                      <% Object.keys(packageList || {}).forEach((pkg) => { %>
                        <option value="<%= pkg %>"><%= pkg %></option>
                      <% }) %>
                    </select>
                  </div>
                  <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
                    <div>
                      <label class="block text-xs font-medium text-slate-400 mb-2" for="coins">Coins</label>
                      <input id="coins" type="number" min="0" class="w-full rounded-sm border border-neutral-800/70 bg-neutral-900/60 px-3 py-2 text-sm text-white placeholder:text-slate-500 focus:ring-2 focus:ring-sky-500" placeholder="0">
                    </div>
                    <div>
                      <label class="block text-xs font-medium text-slate-400 mb-2" for="ram">Memory (GiB)</label>
                      <input id="ram" type="number" min="0" class="w-full rounded-sm border border-neutral-800/70 bg-neutral-900/60 px-3 py-2 text-sm text-white placeholder:text-slate-500 focus:ring-2 focus:ring-sky-500" placeholder="0">
                    </div>
                    <div>
                      <label class="block text-xs font-medium text-slate-400 mb-2" for="disk">Storage (GiB)</label>
                      <input id="disk" type="number" min="0" class="w-full rounded-sm border border-neutral-800/70 bg-neutral-900/60 px-3 py-2 text-sm text-white placeholder:text-slate-500 focus:ring-2 focus:ring-sky-500" placeholder="0">
                    </div>
                    <div>
                      <label class="block text-xs font-medium text-slate-400 mb-2" for="cpu">CPU (%)</label>
                      <input id="cpu" type="number" min="0" class="w-full rounded-sm border border-neutral-800/70 bg-neutral-900/60 px-3 py-2 text-sm text-white placeholder:text-slate-500 focus:ring-2 focus:ring-sky-500" placeholder="0">
                    </div>
                    <div>
                      <label class="block text-xs font-medium text-slate-400 mb-2" for="servers">Servers</label>
                      <input id="servers" type="number" min="0" class="w-full rounded-sm border border-neutral-800/70 bg-neutral-900/60 px-3 py-2 text-sm text-white placeholder:text-slate-500 focus:ring-2 focus:ring-sky-500" placeholder="0">
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <div class="mt-6 flex justify-end">
              <button type="button" class="inline-flex items-center px-5 py-2.5 rounded-sm bg-sky-500 text-sm font-medium text-white hover:bg-sky-400" onclick="submitCreateUser()">
                Create User
              </button>
            </div>
          </div>
        </div>
      </main>
      <%- include('../components/footer') %>
      <%- include('../components/notifications') %>
    </div>
  </div>

  <script>
    function generatePassword() {
      const password = Math.random().toString(36).slice(2, 14);
      document.getElementById("password").value = password;
    }

    function submitCreateUser() {
      const fields = {
        username: document.getElementById("username").value.trim(),
        email: document.getElementById("email").value.trim(),
        first_name: document.getElementById("first_name").value.trim(),
        last_name: document.getElementById("last_name").value.trim(),
        password: document.getElementById("password").value.trim(),
        language: document.getElementById("language").value.trim() || "en",
        root_admin: document.getElementById("root_admin").checked,
        discord_id: document.getElementById("discord_id").value.trim(),
        package: document.getElementById("package").value,
        coins: document.getElementById("coins").value.trim(),
        ram: document.getElementById("ram").value.trim(),
        disk: document.getElementById("disk").value.trim(),
        cpu: document.getElementById("cpu").value.trim(),
        servers: document.getElementById("servers").value.trim()
      };

      if (!fields.username || !fields.email || !fields.first_name || !fields.last_name || !fields.password) {
        showNotification("Username, email, name, and password are required.", "error");
        return;
      }

      const params = new URLSearchParams();
      Object.entries(fields).forEach(([key, value]) => {
        if (value !== "" && value !== null && typeof value !== "undefined") {
          params.append(key, value);
        }
      });

      window.location.href = `/admin/user/create/submit?${params.toString()}`;
    }
  </script>
</body>
