<%- include('../components/head') %>

<body class="min-h-screen bg-neutral-950 text-slate-100">
  <div>
    <%- include('../components/adminnav') %>
    <div class="md:pl-64 flex flex-col flex-1 min-h-screen">
      <%- include('../components/header') %>
      <main class="flex-1 pb-8">
        <div class="py-4 md:py-6">
          <% /* Skeleton loader, lasts about 0.3s to let the page content load */ %>
          <%- include('../components/skeleton') %>
          <div class="hidden max-w-screen-2xl mx-auto px-4 sm:px-6 md:px-8" id="content">
            <div class="bg-neutral-900 rounded-sm md:rounded-sm p-4 md:p-6 mb-6 border-t border-neutral-800/70 shadow-sm">
              <div class="flex flex-col md:flex-row md:items-center md:justify-between">
                <div class="mb-3 md:mb-0">
                  <h2 class="text-lg md:text-xl font-semibold text-white tracking-tight">Edit Server</h2>
                  <p class="text-xs md:text-sm font-normal text-slate-400 mt-1">Update details and limits for <%= server.name %>.</p>
                </div>
                <div class="flex flex-wrap gap-2">
                  <a href="/admin/server" class="inline-flex items-center justify-center rounded-full border border-neutral-800 bg-white/5 px-4 py-2 text-sm font-medium text-white hover:bg-white/10 transition-colors duration-200">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 mr-2">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M9 15 3 9m0 0 6-6M3 9h12a6 6 0 0 1 0 12h-3" />
                    </svg>
                    Back to Servers
                  </a>
                  <button type="button" class="inline-flex items-center justify-center rounded-full border border-neutral-800 bg-white/5 px-4 py-2 text-sm font-medium text-white hover:bg-white/10" onclick="reinstallServer()">Reinstall</button>
                  <% if (server.suspended) { %>
                    <a href="/admin/server/<%= server.id %>/unsuspend" class="inline-flex items-center justify-center rounded-full border border-emerald-500/20 bg-emerald-500/10 px-4 py-2 text-sm font-medium text-emerald-200 hover:bg-emerald-500/20">Unsuspend</a>
                  <% } else { %>
                    <a href="/admin/server/<%= server.id %>/suspend" class="inline-flex items-center justify-center rounded-full border border-yellow-500/20 bg-yellow-500/10 px-4 py-2 text-sm font-medium text-yellow-200 hover:bg-yellow-500/20">Suspend</a>
                  <% } %>
                  <button type="button" class="inline-flex items-center justify-center rounded-full border border-red-500/30 bg-red-500/10 px-4 py-2 text-sm font-medium text-red-200 hover:bg-red-500/20" onclick="deleteServer()">Delete</button>
                </div>
              </div>
            </div>

            <% if (req.query.err) { %>
            <div class="rounded-sm md:rounded-sm border border-neutral-800/70 p-4 mb-6 bg-red-500/10">
              <div class="flex">
                <div class="flex-shrink-0">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                  </svg>
                </div>
                <div class="ml-3">
                  <p class="text-sm text-white">Error code: <code class="bg-white/10 px-1.5 py-0.5 rounded-sm"><%= req.query.err %></code></p>
                </div>
              </div>
            </div>
            <% } %>

            <% if (req.query.success) { %>
            <div class="rounded-sm md:rounded-sm border border-neutral-800/70 p-4 mb-6 bg-sky-500/10">
              <div class="flex">
                <div class="flex-shrink-0">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-sky-500" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                  </svg>
                </div>
                <div class="ml-3">
                  <p class="text-sm text-white"><%= req.query.success %></p>
                </div>
              </div>
            </div>
            <% } %>

            <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
              <div class="bg-neutral-900/60 rounded-sm p-5 border-t border-neutral-800/70 shadow-sm">
                <h3 class="text-base font-semibold text-white">Details</h3>
                <div class="mt-4 space-y-3">
                  <div>
                    <label class="block text-xs font-medium text-slate-400 mb-2" for="server_name">Server Name</label>
                    <input id="server_name" type="text" class="w-full rounded-sm border border-neutral-800/70 bg-neutral-900/60 px-3 py-2 text-sm text-white" value="<%= server.name %>">
                  </div>
                  <div>
                    <label class="block text-xs font-medium text-slate-400 mb-2" for="server_desc">Description</label>
                    <input id="server_desc" type="text" class="w-full rounded-sm border border-neutral-800/70 bg-neutral-900/60 px-3 py-2 text-sm text-white" value="<%= server.description || '' %>">
                  </div>
                  <div class="grid grid-cols-1 sm:grid-cols-2 gap-3 text-sm">
                    <div class="flex items-center justify-between">
                      <span class="text-slate-400">Identifier</span>
                      <span class="text-white"><%= server.identifier %></span>
                    </div>
                    <div class="flex items-center justify-between">
                      <span class="text-slate-400">Owner ID</span>
                      <span class="text-white"><%= server.user %></span>
                    </div>
                  </div>
                </div>
              </div>

              <div class="bg-neutral-900/60 rounded-sm p-5 border-t border-neutral-800/70 shadow-sm">
                <h3 class="text-base font-semibold text-white">Limits</h3>
                <div class="mt-4 grid grid-cols-1 sm:grid-cols-2 gap-3">
                  <div>
                    <label class="block text-xs font-medium text-slate-400 mb-2" for="limit_memory">Memory (MB)</label>
                    <input id="limit_memory" type="number" class="w-full rounded-sm border border-neutral-800/70 bg-neutral-900/60 px-3 py-2 text-sm text-white" value="<%= server.limits.memory %>">
                  </div>
                  <div>
                    <label class="block text-xs font-medium text-slate-400 mb-2" for="limit_disk">Disk (MB)</label>
                    <input id="limit_disk" type="number" class="w-full rounded-sm border border-neutral-800/70 bg-neutral-900/60 px-3 py-2 text-sm text-white" value="<%= server.limits.disk %>">
                  </div>
                  <div>
                    <label class="block text-xs font-medium text-slate-400 mb-2" for="limit_cpu">CPU (%)</label>
                    <input id="limit_cpu" type="number" class="w-full rounded-sm border border-neutral-800/70 bg-neutral-900/60 px-3 py-2 text-sm text-white" value="<%= server.limits.cpu %>">
                  </div>
                  <div>
                    <label class="block text-xs font-medium text-slate-400 mb-2" for="limit_io">IO</label>
                    <input id="limit_io" type="number" class="w-full rounded-sm border border-neutral-800/70 bg-neutral-900/60 px-3 py-2 text-sm text-white" value="<%= server.limits.io %>">
                  </div>
                  <div>
                    <label class="block text-xs font-medium text-slate-400 mb-2" for="limit_swap">Swap</label>
                    <input id="limit_swap" type="number" class="w-full rounded-sm border border-neutral-800/70 bg-neutral-900/60 px-3 py-2 text-sm text-white" value="<%= server.limits.swap %>">
                  </div>
                </div>
              </div>

              <div class="bg-neutral-900/60 rounded-sm p-5 border-t border-neutral-800/70 shadow-sm lg:col-span-2">
                <h3 class="text-base font-semibold text-white">Feature Limits</h3>
                <div class="mt-4 grid grid-cols-1 sm:grid-cols-3 gap-3">
                  <div>
                    <label class="block text-xs font-medium text-slate-400 mb-2" for="limit_databases">Databases</label>
                    <input id="limit_databases" type="number" class="w-full rounded-sm border border-neutral-800/70 bg-neutral-900/60 px-3 py-2 text-sm text-white" value="<%= server.feature_limits.databases %>">
                  </div>
                  <div>
                    <label class="block text-xs font-medium text-slate-400 mb-2" for="limit_backups">Backups</label>
                    <input id="limit_backups" type="number" class="w-full rounded-sm border border-neutral-800/70 bg-neutral-900/60 px-3 py-2 text-sm text-white" value="<%= server.feature_limits.backups %>">
                  </div>
                  <div>
                    <label class="block text-xs font-medium text-slate-400 mb-2" for="limit_allocations">Allocations</label>
                    <input id="limit_allocations" type="number" class="w-full rounded-sm border border-neutral-800/70 bg-neutral-900/60 px-3 py-2 text-sm text-white" value="<%= server.feature_limits.allocations %>">
                  </div>
                </div>
              </div>
            </div>

            <div class="mt-6 flex justify-end">
              <button type="button" class="inline-flex items-center px-5 py-2.5 rounded-sm bg-sky-500 text-sm font-medium text-white hover:bg-sky-400" onclick="updateServer()">Save Changes</button>
            </div>
          </div>
        </div>
      </main>
      <%- include('../components/footer') %>
      <%- include('../components/notifications') %>
    </div>
  </div>

  <script>
    function updateServer() {
      const params = new URLSearchParams({
        name: document.getElementById("server_name").value.trim(),
        description: document.getElementById("server_desc").value.trim(),
        allocation: "<%= allocationId || '' %>",
        memory: document.getElementById("limit_memory").value.trim(),
        disk: document.getElementById("limit_disk").value.trim(),
        cpu: document.getElementById("limit_cpu").value.trim(),
        io: document.getElementById("limit_io").value.trim(),
        swap: document.getElementById("limit_swap").value.trim(),
        databases: document.getElementById("limit_databases").value.trim(),
        backups: document.getElementById("limit_backups").value.trim(),
        allocations: document.getElementById("limit_allocations").value.trim()
      });

      window.location.href = `/admin/server/<%= server.id %>/update?${params.toString()}`;
    }

    function reinstallServer() {
      if (!confirm("Reinstall this server?")) {
        return;
      }
      window.location.href = `/admin/server/<%= server.id %>/reinstall`;
    }

    function deleteServer() {
      if (!confirm("Delete this server? This cannot be undone.")) {
        return;
      }
      window.location.href = `/admin/server/<%= server.id %>/delete`;
    }
  </script>
</body>
