<div class="bg-neutral-900/60 border border-neutral-800/80 rounded-2xl p-6 md:p-8 mb-6 space-y-4">
  <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
    <div>
      <p class="text-xs uppercase tracking-[0.3em] text-slate-500">Server manager</p>
      <h1 class="text-2xl md:text-3xl font-semibold text-white mt-1"><%= server.attributes.name %></h1>
      <p class="text-sm text-slate-400 mt-1">
        Identifier:
        <span class="font-medium text-slate-200"><%= server.attributes.identifier %></span>
      </p>
      <p class="text-sm text-slate-500">
        <%= server.attributes.description || "No description was provided." %>
      </p>
    </div>
    <div class="flex gap-2 flex-wrap">
      <a
        href="/servers"
        class="inline-flex items-center gap-2 rounded-full border border-neutral-800 px-4 py-2 text-sm font-semibold text-slate-200 hover:border-slate-500 transition"
      >
        Back to list
      </a>
      <a
        href="<%= serverConsoleUrl %>"
        target="_blank"
        rel="noreferrer"
        class="inline-flex items-center gap-2 rounded-full bg-sky-500/90 px-4 py-2 text-sm font-semibold text-white hover:bg-sky-400 transition"
      >
        Open panel console
      </a>
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-4 text-sm text-slate-400">
    <div class="rounded-2xl bg-neutral-950/70 border border-neutral-800/80 p-4">
      <div class="text-[0.65rem] uppercase tracking-[0.4em] text-slate-500">Status</div>
      <div class="mt-2 text-lg font-semibold text-white">
        <%= server.attributes.status ? server.attributes.status.toUpperCase() : "UNKNOWN" %>
      </div>
      <p class="text-xs text-slate-500 mt-1">Node: <%= (server.relationships && server.relationships.node && server.relationships.node.attributes && server.relationships.node.attributes.name) || "N/A" %></p>
    </div>
    <div class="rounded-2xl bg-neutral-950/70 border border-neutral-800/80 p-4">
      <div class="text-[0.65rem] uppercase tracking-[0.4em] text-slate-500">Egg</div>
      <div class="mt-2 text-lg font-semibold text-white">
        <%= (server.relationships && server.relationships.egg && server.relationships.egg.data && server.relationships.egg.data.attributes && server.relationships.egg.data.attributes.name) || "Custom" %>
      </div>
      <p class="text-xs text-slate-500 mt-1">Environment: <%= server.attributes.build && server.attributes.build.environment ? server.attributes.build.environment : "N/A" %></p>
    </div>
    <div class="rounded-2xl bg-neutral-950/70 border border-neutral-800/80 p-4">
      <div class="text-[0.65rem] uppercase tracking-[0.4em] text-slate-500">Created</div>
      <div class="mt-2 text-lg font-semibold text-white">
        <%= server.attributes.created_at ? new Date(server.attributes.created_at).toLocaleDateString() : "Unknown" %>
      </div>
      <p class="text-xs text-slate-500 mt-1">Owner: <%= server.attributes.owner ? server.attributes.owner : "Server owner" %></p>
    </div>
  </div>
</div>
