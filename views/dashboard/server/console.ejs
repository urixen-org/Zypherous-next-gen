<%- include('../../components/head') %>

<body class="min-h-screen bg-neutral-950 text-slate-100">
  <%- include('../../components/modal') %>
  <div>
    <%- include('../../components/navigation') %>
    <div class="md:pl-64 flex flex-col flex-1 min-h-screen">
      <%- include('../../components/header') %>
      <main class="flex-1 pb-8">
        <div class="py-4 md:py-6">
          <% /* Skeleton loader for consistent UX */ %>
          <%- include('../../components/skeleton') %>
          <div class="hidden max-w-screen-2xl mx-auto px-4 sm:px-6 md:px-8" id="content">
            <%- include('./header') %>
            <%- include('./tabs') %>

            <div class="mt-6 bg-neutral-900/60 border border-neutral-800/80 rounded-2xl p-6 space-y-4">
              <div class="flex items-center justify-between">
                <div>
                  <p class="text-xs uppercase tracking-[0.3em] text-slate-500">Live console</p>
                  <h2 class="text-xl font-semibold text-white">Console stream</h2>
                </div>
                <span class="text-xs text-slate-500">Updated every 5s</span>
              </div>
              <textarea
                readonly
                class="w-full rounded-2xl bg-black/70 border border-neutral-800 px-4 py-3 text-xs font-mono text-slate-300 h-72 resize-none"
              ><%= settings.name %> does not proxy the live Pterodactyl console. Use the panel for real-time output.</textarea>
              <div class="flex flex-wrap gap-3">
                <a
                  href="<%= serverConsoleUrl %>"
                  target="_blank"
                  rel="noreferrer"
                  class="inline-flex items-center gap-2 rounded-2xl bg-sky-500/90 px-4 py-2 text-sm font-semibold text-white hover:bg-sky-400 transition"
                >
                  Open panel console
                </a>
                <button
                  disabled
                  class="inline-flex items-center gap-2 rounded-2xl border border-neutral-800 px-4 py-2 text-sm font-semibold text-slate-400 cursor-not-allowed"
                >
                  Waiting for relay
                </button>
              </div>
              <p class="text-xs text-slate-500">
                All console input and output is forwarded through the official panel. Click above to interact.
              </p>
            </div>
          </div>
        </div>
      </main>
      <%- include('../../components/footer') %>
    </div>
  </div>
  <%- include('../../components/notifications') %>
</body>
