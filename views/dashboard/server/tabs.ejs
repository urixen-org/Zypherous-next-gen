<div class="mt-6">
  <div class="flex flex-wrap gap-2">
    <% (serverTabs || []).forEach(function (tab) { %>
      <a
        href="<%= tab.href %>"
        class="<%= tab.key === serverSection ? 'border border-sky-500 bg-sky-400/10 text-sky-300' : 'border border-neutral-800 bg-neutral-900/60 text-slate-300' %> inline-flex items-center px-4 py-2 text-xs font-semibold uppercase tracking-[0.2em] rounded-xl transition-colors duration-200"
      >
        <%= tab.label %>
      </a>
    <% }) %>
  </div>
</div>
