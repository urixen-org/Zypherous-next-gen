<html class="h-full">
  <%- include('./components/head') %> <% if (userinfo) { %>
  <meta http-equiv="Refresh" content="0; url='../dashboard'" />
  <% } %>

  <body class="min-h-screen bg-neutral-950 text-slate-100 font-sans">
    <main class="min-h-screen flex items-center justify-center px-4">
      <div
        class="w-full max-w-6xl mx-auto p-8 grid gap-8 md:grid-cols-2 items-center md:items-stretch"
      >
        <div
          class="hidden md:block md:relative md:h-full md:min-h-[420px] md:overflow-hidden md:rounded-3xl md:border md:border-neutral-800/80 md:shadow-2xl"
        >
          <img
            src="https://i.pinimg.com/736x/8f/4f/45/8f4f4531bcf08076e7a5e53652e9738e.jpg"
            alt="Minecraft aesthetic background"
            class="w-full h-full object-cover md:absolute md:inset-0"
          />
        </div>
        <section
          class="w-full max-w-sm h-min justify-self-center md:justify-self-end rounded-2xl border border-neutral-800/80 bg-neutral-950/80 px-6 py-8 md:px-8"
        >
          <div
            class="flex items-center justify-center gap-1 text-2xl font-brand"
          >
            <img
              src="<%= settings.homepage_logo || settings.logo %>"
              alt="<%= settings.name %> Logo"
              class="h-10 w-auto object-contain invert"
            />
            <%= settings.name %>
          </div>
          <div class="mt-6 text-center">
            <p class="mt-2 text-sm text-slate-400">Sign In To Continue</p>
          </div>

          <div class="mt-6 space-y-3">
            <a
              href="#"
              id="login-button"
              class="w-full inline-flex items-center justify-center gap-3 rounded-xl bg-sky-400 px-4 py-3 text-sm font-semibold text-neutral-950 hover:bg-sky-500"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="18"
                height="18"
                viewBox="0 0 127.14 96.36"
                fill="currentColor"
                class="flex-shrink-0"
              >
                <path
                  d="M107.7,8.07A105.15,105.15,0,0,0,81.47,0a72.06,72.06,0,0,0-3.36,6.83A97.68,97.68,0,0,0,49,6.83,72.37,72.37,0,0,0,45.64,0,105.89,105.89,0,0,0,19.39,8.09C2.79,32.65-1.71,56.6.54,80.21h0A105.73,105.73,0,0,0,32.71,96.36,77.7,77.7,0,0,0,39.6,85.25a68.42,68.42,0,0,1-10.85-5.18c.91-.66,1.8-1.34,2.66-2a75.57,75.57,0,0,0,64.32,0c.87.71,1.76,1.39,2.66,2a68.68,68.68,0,0,1-10.87,5.19,77,77,0,0,0,6.89,11.1A105.25,105.25,0,0,0,126.6,80.22h0C129.24,52.84,122.09,29.11,107.7,8.07ZM42.45,65.69C36.18,65.69,31,60,31,53s5-12.74,11.43-12.74S54,46,53.89,53,48.84,65.69,42.45,65.69Zm42.24,0C78.41,65.69,73.25,60,73.25,53s5-12.74,11.44-12.74S96.23,46,96.12,53,91.08,65.69,84.69,65.69Z"
                />
              </svg>
              Discord
            </a>

            <a
              href="#"
              id="google-login-button"
              class="w-full inline-flex items-center justify-center gap-3 rounded-xl border border-neutral-800 bg-neutral-950 px-4 py-3 text-sm font-semibold text-slate-100 hover:bg-neutral-900"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="18"
                height="18"
                viewBox="0 0 24 24"
                class="flex-shrink-0"
              >
                <path
                  fill="#4285F4"
                  d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"
                />
                <path
                  fill="#34A853"
                  d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"
                />
                <path
                  fill="#FBBC05"
                  d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l3.66-2.84z"
                />
                <path
                  fill="#EA4335"
                  d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"
                />
              </svg>
              Google
            </a>
          </div>

          <p class="mt-6 text-center text-xs text-slate-500">
            &copy; <%= new Date().getFullYear() %> <%= settings.name %>
          </p>
        </section>
      </div>
    </main>

    <!-- Maintenance Modal -->
    <div
      id="maintenance-modal"
      class="fixed inset-0 z-50 hidden flex items-center justify-center"
    >
      <div
        class="fixed inset-0 bg-black bg-opacity-75"
        aria-hidden="true"
      ></div>

      <div
        class="relative bg-neutral-950 border border-neutral-800 rounded-2xl p-5 md:p-6 w-full max-w-md mx-auto z-10"
      >
        <!-- Close button -->
        <button
          id="close-maintenance-modal"
          class="absolute top-4 right-4 text-slate-400 hover:text-white"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5"
            viewBox="0 0 20 20"
            fill="currentColor"
          >
            <path
              fill-rule="evenodd"
              d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"
              clip-rule="evenodd"
            />
          </svg>
        </button>

        <!-- Modal content -->
        <div class="flex flex-col items-center text-center">
          <div class="flex-shrink-0 bg-sky-500/10 p-2.5 rounded-xl mb-4">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              class="w-6 h-6 text-sky-500"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M11.42 15.17L17.25 21A2.652 2.652 0 0021 17.25l-5.877-5.877M11.42 15.17l2.496-3.03c.317-.384.74-.626 1.208-.766M11.42 15.17l-4.655 5.653a2.548 2.548 0 11-3.586-3.586l6.837-5.63m5.108-.233c.55-.164 1.163-.188 1.743-.14a4.5 4.5 0 004.486-6.336l-3.276 3.277a3.004 3.004 0 01-2.25-2.25l3.276-3.276a4.5 4.5 0 00-6.336 4.486c.091 1.076-.071 2.264-.904 2.95l-.102.085m-1.745 1.437L5.909 7.5H4.5L2.25 3.75l1.5-1.5L7.5 4.5v1.409l4.26 4.26m-1.745 1.437l1.745-1.437m6.615 8.206L15.75 15.75M4.867 19.125h.008v.008h-.008v-.008z"
              />
            </svg>
          </div>

          <h2 class="text-xl font-semibold text-white mb-2">Maintenance</h2>

          <p id="maintenance-message" class="text-slate-300 text-sm mb-5">
            We're currently performing scheduled maintenance. Please check back
            later.
          </p>

          <div class="flex gap-3 w-full">
            <button
              id="close-maintenance-button"
              class="flex-1 py-2 px-4 bg-neutral-950 hover:bg-neutral-900 rounded-xl text-white text-sm font-medium border border-neutral-800/70"
            >
              Close
            </button>
            <a
              href="<%= settings.website.discord %>"
              class="flex-1 py-2 px-4 bg-sky-500 hover:bg-sky-400 rounded-xl text-white text-sm font-medium flex items-center justify-center border border-neutral-800"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="16"
                height="16"
                viewBox="0 0 127.14 96.36"
                fill="white"
                class="mr-2"
              >
                <path
                  d="M107.7,8.07A105.15,105.15,0,0,0,81.47,0a72.06,72.06,0,0,0-3.36,6.83A97.68,97.68,0,0,0,49,6.83,72.37,72.37,0,0,0,45.64,0,105.89,105.89,0,0,0,19.39,8.09C2.79,32.65-1.71,56.6.54,80.21h0A105.73,105.73,0,0,0,32.71,96.36,77.7,77.7,0,0,0,39.6,85.25a68.42,68.42,0,0,1-10.85-5.18c.91-.66,1.8-1.34,2.66-2a75.57,75.57,0,0,0,64.32,0c.87.71,1.76,1.39,2.66,2a68.68,68.68,0,0,1-10.87,5.19,77,77,0,0,0,6.89,11.1A105.25,105.25,0,0,0,126.6,80.22h0C129.24,52.84,122.09,29.11,107.7,8.07ZM42.45,65.69C36.18,65.69,31,60,31,53s5-12.74,11.43-12.74S54,46,53.89,53,48.84,65.69,42.45,65.69Zm42.24,0C78.41,65.69,73.25,60,73.25,53s5-12.74,11.44-12.74S96.23,46,96.12,53,91.08,65.69,84.69,65.69Z"
                />
              </svg>
              Discord
            </a>
          </div>
        </div>
      </div>
    </div>

    <script>
      // Check for maintenance mode when login buttons are clicked
      document
        .getElementById("login-button")
        .addEventListener("click", async function (e) {
          e.preventDefault();

          try {
            const response = await fetch("/api/maintenance/status");
            const data = await response.json();

            if (data.maintenance) {
              // If maintenance mode is enabled, show the maintenance modal
              const modal = document.getElementById("maintenance-modal");
              const message = document.getElementById("maintenance-message");

              // Set the maintenance message
              message.textContent =
                data.message ||
                "We're currently performing scheduled maintenance. Please check back later.";

              // Show the modal with animation
              modal.classList.remove("hidden");
            } else {
              // Otherwise, proceed with login
              window.location.href = "../login";
            }
          } catch (error) {
            console.error("Error checking maintenance status:", error);
            // If there's an error, proceed with login anyway
            window.location.href = "../login";
          }
        });

      // Google login button - direct route to Google auth
      document
        .getElementById("google-login-button")
        .addEventListener("click", async function (e) {
          e.preventDefault();

          try {
            const response = await fetch("/api/maintenance/status");
            const data = await response.json();

            if (data.maintenance) {
              // If maintenance mode is enabled, show the maintenance modal
              const modal = document.getElementById("maintenance-modal");
              const message = document.getElementById("maintenance-message");

              // Set the maintenance message
              message.textContent =
                data.message ||
                "We're currently performing scheduled maintenance. Please check back later.";

              // Show the modal with animation
              modal.classList.remove("hidden");
            } else {
              // Directly go to Google auth - bypass /login route completely
              window.location.href = "/auth/google";
            }
          } catch (error) {
            console.error("Error checking maintenance status:", error);
            // If there's an error, proceed with login anyway
            window.location.href = "/auth/google";
          }
        });

      // Close maintenance modal (X button)
      document
        .getElementById("close-maintenance-modal")
        .addEventListener("click", function () {
          const modal = document.getElementById("maintenance-modal");
          modal.classList.add("hidden");
        });

      // Close maintenance modal (Close button)
      document
        .getElementById("close-maintenance-button")
        .addEventListener("click", function () {
          document.getElementById("close-maintenance-modal").click();
        });

      // Close modal when clicking outside
      document
        .getElementById("maintenance-modal")
        .addEventListener("click", function (e) {
          if (e.target === this) {
            document.getElementById("close-maintenance-modal").click();
          }
        });
    </script>

    <style>
      body {
        position: relative;
      }

      body::before {
        content: "";
        position: fixed;
        inset: 0;
        background-image: linear-gradient(
            to right,
            rgba(56, 189, 248, 0.18) 1px,
            transparent 1px
          ),
          linear-gradient(
            to bottom,
            rgba(56, 189, 248, 0.18) 1px,
            transparent 1px
          );
        background-size: 32px 32px;
        pointer-events: none;
        z-index: 0;
      }

      body > * {
        position: relative;
        z-index: 1;
      }
    </style>
  </body>
</html>
